<div data-widget-name="card--info" class="card card--users card--unadjustable" data-preload>
    <div class="card__header">
        <div class="card__header-left">
            <span>Users online</span>
        </div>            
    </div>
    <div class="card__content card__content--flex-column" data-scrollable>

        {% if items|length>0 %}
            <div class="user-list-block">
                {%for subitems in items|batch(4) %}                    
                    {%for item in subitems %}
                        <div class="user">
                            <div class="avatar">
                                <img  class="gravatar" src="{{ gravatar(item.user.email) }}" alt="{{ item.user.fullname }}" /> 
                                <strong>{{ item.user.fullname|default('---') }}</strong>
                                <span class="text-small">{{ format_x_days(item.created_at) }}</span>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        {% else %}
            <div class="zd">
                <div class="zd-container">
                    <div class="zd zd--lg">
                        <div class="zd__header">
                            <i class="zmdi zmdi-block"></i>
                        </div>
                        <div class="zd__content">
                            <div class="zd__title">{{ trans('antares/logger::messages.no_data_available')|raw }}
                            </div>
                            <div class="zd__description">
                                {{ trans('antares/logger::messages.no_data_available_description')|raw }}                    
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}



    </div>
</div>